<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tdevelopments.whazzup">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Whazzup"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activity.EncryptionSetup"></activity>
        <activity
            android:name=".Activity.editprof"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar.Bridge"></activity>
        <activity
            android:name=".Activity.account_setting"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar.Bridge" />
        <activity
            android:name=".Activity.storyImagePicker"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar.Bridge" />
        <activity
            android:name=".Activity.chatActivity"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar.Bridge" />
        <activity
            android:name=".Activity.userprofilesetup"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar.Bridge" />
        <activity
            android:name=".Activity.IntroAct"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.SignIn"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar.Bridge" />
        <activity
            android:name=".Activity.UserAuth"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar.Bridge" />
        <activity
            android:name=".Activity.MainActivity"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar.Bridge" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

<!--    permission-->
    
    <uses-permission android:name="android.permission.WRITE_CONTACTS"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS"></uses-permission>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.INTERNET"/>

</manifest>